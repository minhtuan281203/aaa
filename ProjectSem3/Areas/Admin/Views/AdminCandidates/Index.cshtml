@model IEnumerable<ProjectSem3.Models.Candidate>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}



<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Trang chủ</a>
            <span class="breadcrumb-item active"> Manager Candidates</span>
        </nav>
    </div>
</div>
<div class="card">
    <div class="card-body">
        <div class="row m-b-30">
            <div class="col-lg-15">
                <a class="btn btn-primary" asp-area="Admin" asp-controller="AdminCandidates" asp-action="Create"><i class="anticon anticon-plus-circle m-r-5"></i><span>Tạo mới tài khoản</span></a>
            </div>


        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-hover e-commerce-table">
            <thead>
                <tr>

                    <th>ID</th>
                    <th>Fullname</th>
                    <th>Age</th>
                    <th>Phone</th>
                    <th>Literacy</th>
             
                    <th>Vacancy</th>

                    
                    <th>Description</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @item.Id
                            </td>

                            <td>@item.Fullname</td>
                            <td>@item.Age</td>
                            <td>@item.Phone</td>
                            <td>@item.Literacy</td>
                            
                            <td>@item.Vacancy</td>
                            <td>@item.Description</td>
                            <td>
                                <a class="btn btn-primary btn-tone m-r-5" asp-area="Admin" asp-controller="AdminCandidates" asp-action="Details" asp-route-id="@item.Id">Details</a>
                                <a class="btn btn-secondary btn-tone m-r-5" asp-area="Admin" asp-controller="AdminCandidates" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                                <a class="btn btn-success btn-tone m-r-5" asp-area="Admin" asp-controller="AdminCandidates" asp-action="Delete" asp-route-id="@item.Id">Delete</a>

                            </td>
                        </tr>
                    }
                }


            </tbody>
        </table>
    </div>
</div>








